# Configurações de Produção - LicitaBrasil Web
# IMPORTANTE: Altere todos os valores padrão antes do deploy!

# Configurações do Servidor
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Configurações do Banco de Dados PostgreSQL
DATABASE_URL="postgresql://licitabrasil:CHANGE_DB_PASSWORD@postgres:5432/licita_brasil_web?schema=public"
DB_HOST=postgres
DB_PORT=5432
DB_NAME=licita_brasil_web
DB_USER=licitabrasil
DB_PASSWORD=CHANGE_DB_PASSWORD

# Configurações do Redis
REDIS_URL=redis://:CHANGE_REDIS_PASSWORD@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_REDIS_PASSWORD

# Configurações de Autenticação - ALTERE ESTAS CHAVES!
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_SECURE_SECRET_KEY
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@licitabrasilweb.com.br

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# URLs do Frontend
FRONTEND_URL=https://licitabrasilweb.com.br
CORS_ORIGINS=https://licitabrasilweb.com.br,https://www.licitabrasilweb.com.br

# Configurações da API Externa (se necessário)
EXTERNAL_API_URL=
EXTERNAL_API_KEY=

# Configurações de Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Configurações de Monitoramento
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Configurações SSL (se usando HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
