# Configurações de Staging - LicitaBrasil Web

# Configurações do Servidor
NODE_ENV=staging
PORT=3001
API_VERSION=v1

# Configurações do Banco de Dados PostgreSQL
DATABASE_URL="postgresql://licitabrasil:staging_db_password@postgres:5432/licita_brasil_web_staging?schema=public"
DB_HOST=postgres
DB_PORT=5432
DB_NAME=licita_brasil_web_staging
DB_USER=licitabrasil
DB_PASSWORD=staging_db_password

# Configurações do Redis
REDIS_URL=redis://:staging_redis_password@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# Configurações de Autenticação
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=staging-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@licitabrasilweb.com.br
SMTP_PASSWORD=staging-email-password
EMAIL_FROM=staging@licitabrasilweb.com.br

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Configurações de Logs
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# URLs do Frontend
FRONTEND_URL=https://staging.licitabrasilweb.com.br
CORS_ORIGINS=https://staging.licitabrasilweb.com.br,http://localhost:3000

# Configurações da API Externa (se necessário)
EXTERNAL_API_URL=
EXTERNAL_API_KEY=

# Configurações de Backup
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
