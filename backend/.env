# Configurações do Servidor
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Configurações do Banco de Dados PostgreSQL
DATABASE_URL="postgresql://licitabrasil:LicitaBrasil2025!Secure@postgres:5432/licita_brasil_web?schema=public"
DB_HOST=postgres
DB_PORT=5432
DB_NAME=licita_brasil_web
DB_USER=licitabrasil
DB_PASSWORD=LicitaBrasil2025!Secure

# Configurações do Redis
REDIS_URL=redis://:Redis2025!LicitaBrasil@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=Redis2025!LicitaBrasil

# Configurações de Autenticação
JWT_SECRET=LicitaBrasil2025!JWT#Secret$Key%Production&Secure*Environment
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=LicitaBrasil2025!Refresh#Token$Secret%Key&Production*Secure
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@licitabrasilweb.com.br
SMTP_PASSWORD=CONFIGURE_SMTP_PASSWORD_HERE
EMAIL_FROM=noreply@licitabrasilweb.com.br

# Configurações SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/licitabrasil.crt
SSL_KEY_PATH=/etc/nginx/ssl/licitabrasil.key
SSL_CHAIN_PATH=/etc/nginx/ssl/licitabrasil-chain.crt

# Configurações de Domínio
DOMAIN_NAME=licitabrasilweb.com.br
API_DOMAIN=api.licitabrasilweb.com.br
MONITORING_DOMAIN=monitoring.licitabrasilweb.com.br

# Configurações de Segurança Adicional
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# URLs do Frontend
FRONTEND_URL=https://licitabrasilweb.com.br
API_URL=https://api.licitabrasilweb.com.br
CORS_ORIGINS=https://licitabrasilweb.com.br,https://www.licitabrasilweb.com.br,https://api.licitabrasilweb.com.br

# Configurações da API Externa (se necessário)
EXTERNAL_API_URL=
EXTERNAL_API_KEY=

# Configurações de Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
